<h2 class="mt-4"><%= t('.title') %></h2>
<hr class="my-4">

<div class="col-md-5">
    <ul class="list-group">
      <% @lists.each do |list| %>
        <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
          <%= link_to list.name, list, class: "list-group-item-action" %>
          <span class="badge badge-primary badge-pill"><%= list.recipes.length %> receitas</span>
        </li>
      <% end %>
    </ul>
</div>