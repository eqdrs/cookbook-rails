<div class="col-md-4">
  <div class="card mb-4 shadow-sm">
    <% if recipe.photo.attached? %>
      <%= image_tag recipe.photo, class: 'card-img-top' %>
    <% else %>
      <%= image_tag 'https://via.placeholder.com/500x255', class: 'card-img-top' %>
    <% end %>
    <div class="card-body">
      <h1 class="h4">
        <% if recipe.highlight %>
          <%= image_tag 'star.png', {width: 25} %>
        <% end %>
        <%= link_to recipe.title, recipe %>
      </h1>
      <ul>
        <li><%= recipe.recipe_type.name %></li>
        <li><%= recipe.cuisine.name %></li>
        <li><%= recipe.difficulty %></li>
        <li><%= recipe.cook_time_min %></li>
      </ul>
    </div>
  </div>
</div>
