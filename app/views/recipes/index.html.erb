<section class="jumbotron text-center">
  <h1><%= t('.title') %></h1>
  <p class="lead"><%= t('.subtitle') %></p>
</section>

<div class="row">
  <div class="col-md-9">

    <section id="all-recipes">
      <h3 class="text-center mb-4"><%= t('.recipes') %></h3>
      <% if @recipes.any? %>
        <div class="row">
          <%= render @recipes %>
        </div>
      <% else %>
        <p class="text-center">
          <%= t('.no_recipes') %>
        </p>
      <% end %>
    </section>

    <section id="last-recipes">
      <h3 class="text-center mb-4 mt-4"><%= t('.last_recipes') %></h3>
      <% if @recipes.any? %>
        <div class="row">
          <%= render @recipes.last(6) %>
        </div>
      <% else %>
        <p class="text-center">
          <%= t('.no_recipes') %>
        </p>
      <% end %>
    </section>
  </div>

  <div class="col-md-3">
    <h3 class="text-center mb-4"><%= t('.recipe_types') %></h3>
    <ul class="list-group">
      <% @recipe_types.each do |recipe_type| %>
        <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
          <%= link_to recipe_type.name, recipe_type, class: "list-group-item-action" %>
          <span class="badge badge-primary badge-pill"><%= recipe_type.recipes.length %></span>
        </li>
      <% end %>
    </ul>
  </div>
</div>