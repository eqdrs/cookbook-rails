<% if recipe.errors.any? %>
  <p class="alert alert-warning alert-dismissible fade show">
    <%= t('.blank') %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </p>
<% end %>

<h3 class='mt-4'><%= t('.title') %></h3>
<%= form_with model: recipe, class: 'mt-4', local: true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control col-md-6' %>
  </div>
  <div class="form-group">
  <%= f.label :recipe_type_id %>
  <%= f.collection_select :recipe_type_id, recipe_types, :id, :name,
                          {}, class: 'form-control col-md-6' %>
  </div>
  <div class="form-group">
  <%= f.label :cuisine_id %>
  <%= f.collection_select :cuisine_id, cuisines, :id, :name,
                          {}, class: 'form-control col-md-6' %>
  </div>
  <div class="form-group">
  <%= f.label :difficulty %>
  <%= f.text_field :difficulty, class: 'form-control col-md-6' %>
  </div>
  <div class="form-group">
  <%= f.label :cook_time %>
  <%= f.number_field :cook_time, class: 'form-control col-md-6' %>
  </div>
  <div class="form-group">
  <%= f.label :ingredients %>
  <%= f.text_field :ingredients, class: 'form-control col-md-6' %>
  </div>
  <div class="form-group">
  <%= f.label :cook_method %>
  <%= f.text_area :cook_method, class: 'form-control col-md-6' %>
  </div>
  <div class="form-group">
  <%= f.label :photo, 'Foto' %>
  <%= f.file_field :photo %>
  </div>
  <%= f.submit t('.submit'), class: 'btn btn-primary' %>
<% end %>
